<% scope = Devise::Mapping.find_scope!(resource_name) %>
<%= active_admin_form_for(resource, as: resource_name, url: send(:"#{scope}_session_path"), html: { id: "session_new" }) do |f|
  f.inputs do
    resource.class.authentication_keys.each_with_index { |key, index|
      f.input key,
              :label        => content_tag(:i, "email", class: "cb_activeadmin-icons"),
              :placeholder  => t('active_admin.devise.'+key.to_s+'.title'),
              :wrapper_html => {
                :class => "mdi-control with-guide with-icon",
              },
              :input_html  => {
                :autofocus    => index.zero?,
                :autocomplete => 'off',
              }
    }
    f.input :password,
            :label        => content_tag(:i, "lock", class: "cb_activeadmin-icons"),
            :placeholder  => "Password",
            :wrapper_html => {
              :class => "mdi-control with-guide with-icon",
            }
    f.input :remember_me, label: t('active_admin.devise.login.remember_me'), as: :boolean if devise_mapping.rememberable?
  end
  f.actions do
    f.action :submit,
             :button_html  => {
               :value              => t('active_admin.devise.login.submit'),
               "data-disable-with" => t('active_admin.devise.login.submit/disable_with')
             },
             :wrapper_html => {
               :class             => "mdi-btn brand-primary with-ripple",
               :data_ripple_color => "rgba(0,0,0,.3)"
             }
  end
end
%>
<% content_for :extra do %>
  <%= render partial: "active_admin/devise/shared/links" %>
<% end %>
<% content_for :footer do %>
  <%=render partial: "active_admin/devise/shared/footer" %>
<% end %>
